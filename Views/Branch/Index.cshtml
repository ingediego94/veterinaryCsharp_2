@model IEnumerable<practicaUno.Models.Branch>



<div class="row">
    
    <!-- Alert messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    
    
    <!-- Button trigger modal -->
    <div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add Branch
        </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Adding A New Branch</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">


                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mt-3 d-flex flex-column">
                            <label for="BranchName">Branch Name</label>
                            <input id="BranchName" name="BranchName" class="form-control" type="text" required>
                        </div>

                        <div class="mt-3 d-flex flex-column">
                            <label for="BranchCode">Branch Code</label>
                            <input id="BranchCode" name="BranchCode" class="form-control" type="number" min="0" step="1" required>
                        </div>

                        <div class="mt-3 d-flex flex-column">
                            <label for="Address">Address</label>
                            <input id="Address" name="Address" class="form-control" type="text" required>
                        </div>

                        <div class="mt-3 d-flex flex-column">
                            <label for="Phone">Phone</label>
                            <input id="Phone" name="Phone" class="form-control" type="number" min="0" step="1" required>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                    
                    
                </div>
            </div>
        </div>
    </div>
    
    
    
    @* Listing registers *@
    <div class="col-md-12">
        <h3>List of branches</h3>
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Code</th>
                <th scope="col">Branch Name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            
            
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.BranchCode</td>
                    <td>@item.BranchName</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td class="d-flex d-inline-flex gap-1">

                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-controller="Branch" asp-route-id="@item.Id">Edit</a>

                        <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Branch" method="post"
                              style="display: inline">
                            @Html.AntiForgeryToken()

                            <button type="submit"
                                    class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Â¿Do you want to delete this register?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    
</div>